<%- include('../partials/header', { title: 'Dashboard' }) %>

<style>
    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    .table-actions a {
        margin-right: 10px;
        color: #6b7280;
        font-size: 1.1rem;
        transition: color 0.2s;
    }
    .table-actions a:hover {
        color: var(--primary-accent);
    }
    .table-wrapper {
        overflow-x: auto;
    }
    .main-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }
    .main-table th, .main-table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    .main-table th {
        border-bottom-width: 2px;
        font-weight: 600;
    }
    .main-table td {
        font-weight: 500;
    }
    .btn {
        display: inline-block;
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s;
    }
    .btn-primary {
        background: linear-gradient(45deg, #82aaff, #577ed4);
        color: white;
    }
    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 15px rgba(130, 170, 255, 0.4);
    }
</style>

<div class="dashboard-header">
    <h1>Selamat Datang, <%= user.name %>!</h1>
    <a href="/dashboard/buy-domain" class="btn btn-primary">
        <i class="fas fa-plus" style="margin-right: 8px;"></i> Beli / Transfer Domain
    </a>
</div>

<div class="card">
    <h2><i class="fas fa-globe" style="margin-right: 10px; color: var(--primary-accent);"></i>Domain Anda</h2>
    <% if (domains && domains.length > 0) { %>
        <div class="table-wrapper">
            <table class="main-table">
                <thead>
                    <tr>
                        <th>Nama Domain</th>
                        <th>Status</th>
                        <th>Kedaluwarsa</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% domains.forEach(domain => { %>
                        <tr>
                            <td><%= domain.name %></td>
                            <td><%= domain.status_desc %></td>
                            <td><%= new Date(domain.expiry_date).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                            <td class="table-actions">
                                <a href="/dashboard/domain/<%= domain.id %>/manage" title="Kelola Domain">
                                    <i class="fas fa-cog"></i>
                                </a>
                                <a href="#" title="Perbarui Kontak (Coming Soon)">
                                    <i class="fas fa-address-book"></i>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p style="margin-top: 1rem;">Anda belum memiliki domain. Klik tombol di atas untuk mendaftarkan domain pertama Anda!</p>
    <% } %>
</div>

<%- include('../partials/footer') %>