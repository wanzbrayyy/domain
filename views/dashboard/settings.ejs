<%- include('../partials/header', { title: 'Pengaturan Akun', currentPath: '/dashboard/settings' }) %>

<style>
    .grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
</style>

<h1><i class="fas fa-user-cog"></i> Pengaturan Akun</h1>
<p>Pastikan informasi kontak Anda selalu valid dan terbaru.</p>

<div class="card">
    <h2>Edit Informasi Kontak</h2>
    <form action="/dashboard/settings" method="POST" style="margin-top: 1.5rem;">
        <div class="grid-2">
            <div class="form-group">
                <label>Nama Lengkap (Tidak dapat diubah)</label>
                <input type="text" name="name" class="form-control" value="<%= user.name %>" readonly>
            </div>
            <div class="form-group">
                <label>Email (Tidak dapat diubah)</label>
                <input type="email" name="email" class="form-control" value="<%= user.email %>" readonly>
            </div>
        </div>
        <hr style="margin: 1.5rem 0;">
        <div class="form-group">
            <label for="organization">Organisasi</label>
            <input type="text" id="organization" name="organization" class="form-control" value="<%= user.organization || '' %>" required>
        </div>
        <div class="form-group">
            <label for="street_1">Alamat</label>
            <input type="text" id="street_1" name="street_1" class="form-control" value="<%= user.street_1 || '' %>" required>
        </div>
        <div class="grid-2">
            <div class="form-group">
                <label for="city">Kota</label>
                <input type="text" id="city" name="city" class="form-control" value="<%= user.city || '' %>" required>
            </div>
            <div class="form-group">
                <label for="state">Provinsi (State)</label>
                <input type="text" id="state" name="state" class="form-control" value="<%= user.state || '' %>" placeholder="WAJIB DIISI" required>
            </div>
        </div>
        <div class="grid-2">
            <div class="form-group">
                <label for="postal_code">Kode Pos</label>
                <input type="text" id="postal_code" name="postal_code" class="form-control" value="<%= user.postal_code || '' %>" required>
            </div>
            <div class="form-group">
                <label for="voice">Nomor Telepon</label>
                <input type="tel" id="voice" name="voice" class="form-control" value="<%= user.voice || '' %>" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
    </form>
</div>

<%- include('../partials/footer') %>