<%- include('../partials/header', { title: 'Manajemen Voucher' }) %>

<h1>Manajemen Voucher</h1>

<div class="card">
    <h2>Buat Voucher Baru</h2>
    <form action="/admin/vouchers/create" method="POST">
        <div class="form-group">
            <label for="code">Kode Voucher</label>
            <input type="text" id="code" name="code" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="discount">Diskon (dalam %)</label>
            <input type="number" id="discount" name="discount" class="form-control" required>
        </div>
         <div class="form-group">
            <label for="expiryDate">Tanggal Kedaluwarsa</label>
            <input type="date" id="expiryDate" name="expiryDate" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Buat Voucher</button>
    </form>
</div>

<div class="card">
    <h2>Voucher Aktif</h2>
    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>Kode</th>
                    <th>Diskon</th>
                    <th>Kedaluwarsa</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% if(vouchers && vouchers.length > 0) { %>
                    <% vouchers.forEach(voucher => { %>
                        <tr>
                            <td><%= voucher.code %></td>
                            <td><%= voucher.discount %>%</td>
                            <td><%= new Date(voucher.expiryDate).toLocaleDateString('id-ID') %></td>
                            <td><%= voucher.isActive ? 'Aktif' : 'Tidak Aktif' %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr><td colspan="4" style="text-align: center; padding: 20px;">Belum ada voucher yang dibuat.</td></tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>