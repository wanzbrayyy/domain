<%- include('../partials/header', { title: title || 'Manajemen Domain', currentPath: '/admin/domains' }) %>

<h1>Manajemen Domain</h1>
<p>Daftar semua domain yang terdaftar melalui sistem Anda.</p>

<div class="card">
    <div style="overflow-x: auto;">
        <table>
            <thead>
                <tr>
                    <th>Nama Domain</th>
                    <th>ID Pelanggan</th>
                    <th>Status</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% if (domains && domains.length > 0) { %>
                    <% domains.forEach(domain => { %>
                        <% const status = (domain.status_desc || '').toLowerCase(); %>
                        <tr>
                            <td><%= domain.name || 'N/A' %></td>
                            <td><%= domain.customer_id || 'N/A' %></td>
                            <td><%= domain.status_desc || 'Tidak Diketahui' %></td>
                            <td>
                                <% if (status === 'active') { %>
                                    <form action="/admin/domains/<%= domain.id %>/suspend" method="POST" onsubmit="return confirm('Yakin suspend?');">
                                        <input type="text" name="reason" placeholder="Alasan" required>
                                        <button type="submit" class="btn btn-danger">Suspend</button>
                                    </form>
                                <% } else if (status === 'suspended') { %>
                                    <form action="/admin/domains/<%= domain.id %>/unsuspend" method="POST" onsubmit="return confirm('Yakin unsuspend?');">
                                        <button type="submit" class="btn btn-primary">Unsuspend</button>
                                    </form>
                                <% } else { %>
                                    <span>(Tidak ada aksi)</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4">Tidak ada domain yang ditemukan.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>