<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'DigitalHostID' %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-bg: #1f1d2b;
            --main-bg: #eef2f5; /* Warna latar belakang utama yang sedikit lebih cerah */
            --primary-accent: #6c63ff; /* Warna aksen utama (biru-ungu) */
            --primary-accent-hover: #5a52d9; /* Warna aksen saat hover */
            --text-light: #f9fafb;
            --text-dark: #333; /* Warna teks gelap yang lebih konsisten */
            --text-secondary: #666; /* Warna teks sekunder untuk detail */
            --border-color: #3e3c4a; /* Border untuk elemen gelap */
            --card-border-color: #e0e0e0; /* Border untuk card */
            --notif-red: #ef4444;
            --notif-green: #28a745;
            --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.08); /* Bayangan yang lebih lembut */
            --shadow-medium: 0 8px 25px rgba(0, 0, 0, 0.15); /* Bayangan yang lebih kuat */
        }

        *, *::before, *::after {
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            background-color: var(--main-bg);
            color: var(--text-dark);
            line-height: 1.6;
        }

        a {
            text-decoration: none;
            color: var(--primary-accent);
            transition: color 0.2s ease;
        }
        a:hover {
            color: var(--primary-accent-hover);
        }

        /* Layout Utama */
        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        .content-area {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            transition: margin-left 0.3s ease;
            margin-left: 0; /* Default untuk mobile/saat sidebar tertutup */
        }
        .content-area.shifted {
             margin-left: 260px; /* Saat sidebar terbuka di desktop */
        }

        /* Sidebar */
        .sidebar {
            height: 100%;
            width: 260px;
            position: fixed;
            z-index: 1001;
            top: 0;
            left: 0;
            background-color: var(--sidebar-bg);
            padding: 20px 0;
            transform: translateX(-100%);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: none; /* Awalnya tidak ada bayangan */
            display: flex;
            flex-direction: column;
        }

        .sidebar.open {
            transform: translateX(0);
            box-shadow: var(--shadow-medium); /* Bayangan saat terbuka */
        }

        #sidebar-close {
            position: absolute;
            top: 20px;
            right: 25px;
            font-size: 1.7rem;
            color: var(--text-light);
            cursor: pointer;
            transition: color 0.2s ease;
            display: block; /* Selalu tampil di mobile */
        }
        #sidebar-close:hover {
            color: var(--primary-accent);
        }

        .sidebar-header {
            padding: 0 25px 20px 25px;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 15px;
        }
        .sidebar-header a {
            color: var(--text-light);
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .sidebar-header img {
            max-height: 45px;
            border-radius: 50%; /* Membuat logo lebih menarik */
        }
        .sidebar-header span {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
            flex-grow: 1;
        }
        .sidebar-nav li a {
            display: flex;
            align-items: center;
            padding: 14px 25px;
            color: var(--text-light);
            text-decoration: none;
            transition: all 0.2s ease;
            font-size: 1rem;
            position: relative;
        }
        .sidebar-nav li a:hover {
            background-color: var(--primary-accent);
            color: var(--sidebar-bg);
            transform: translateX(5px); /* Efek slide saat hover */
            border-radius: 0 25px 25px 0;
        }
        .sidebar-nav li a i {
            width: 25px;
            margin-right: 15px;
            font-size: 1.1rem;
            text-align: center;
        }
        .sidebar-nav li a.active {
            background-color: var(--primary-accent);
            color: var(--sidebar-bg);
            font-weight: 600;
            border-radius: 0 25px 25px 0;
        }

        .sidebar-footer {
            padding: 20px 25px;
            border-top: 1px solid var(--border-color);
            margin-top: 15px;
        }
        .sidebar-footer a {
            color: #aaa;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: color 0.2s ease;
            font-size: 0.95rem;
        }
        .sidebar-footer a:hover {
            color: var(--text-light);
        }
        .sidebar-footer a i {
            margin-right: 15px;
            font-size: 1.1rem;
        }

        /* Top Bar */
        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #fff;
            padding: 15px 25px;
            box-shadow: var(--shadow-light);
            position: sticky;
            top: 0;
            z-index: 500;
            border-bottom: 1px solid var(--card-border-color);
        }

        #sidebar-toggle {
            font-size: 1.7rem;
            cursor: pointer;
            color: var(--text-dark);
            transition: color 0.2s ease;
        }
        #sidebar-toggle:hover {
            color: var(--primary-accent);
        }

        .top-bar-right {
            position: relative;
            display: flex;
            align-items: center;
            gap: 25px;
        }

        .user-profile {
            font-weight: 500;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .user-profile img {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-accent);
        }


        .notification-wrapper {
            position: relative;
            cursor: pointer;
        }
        .notification-bell {
            font-size: 1.7rem;
            color: var(--text-dark);
            transition: color 0.2s ease;
        }
        .notification-bell:hover {
            color: var(--primary-accent);
        }
        .notification-dot {
            position: absolute;
            top: -3px;
            right: -3px;
            width: 12px;
            height: 12px;
            background-color: var(--notif-red);
            border-radius: 50%;
            border: 2px solid white;
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% { transform: scale(1); opacity: 1; }
            70% { transform: scale(1.1); opacity: 0.7; }
            100% { transform: scale(1); opacity: 1; }
        }

        .notification-dropdown {
            display: none;
            position: absolute;
            top: calc(100% + 15px); /* Sedikit jarak dari top bar */
            right: 0;
            width: 320px;
            background: white;
            border-radius: 10px;
            box-shadow: var(--shadow-medium);
            z-index: 1002;
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease;
            overflow: hidden; /* Pastikan konten tidak meluber */
        }
        .notification-dropdown.show {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }
        .notif-header {
            font-weight: 600;
            padding: 15px 20px;
            border-bottom: 1px solid #eee;
            background-color: var(--main-bg); /* Latar belakang header notif */
            color: var(--text-dark);
        }
        .notif-item {
            padding: 15px 20px;
            border-bottom: 1px solid #f0f0f0;
            transition: background-color 0.2s ease;
        }
        .notif-item:last-child {
            border-bottom: none;
        }
        .notif-item:hover {
            background-color: #f9f9f9;
        }
        .notif-item h4 {
            margin: 0 0 5px 0;
            font-size: 0.95rem;
            color: var(--text-dark);
        }
        .notif-item p {
            margin: 0;
            font-size: 0.85rem;
            color: var(--text-secondary);
        }
        .notif-item a {
            display: block; /* Agar seluruh area notif bisa diklik */
            color: inherit;
        }
        .no-notifications {
            padding: 20px;
            text-align: center;
            color: var(--text-secondary);
        }

        /* Main Content */
        .main-content {
            padding: 2rem;
            flex-grow: 1;
            background-color: var(--main-bg);
        }

        /* Cards and Alerts */
        .card {
            background-color: #ffffff;
            border-radius: 10px; /* Sudut lebih membulat */
            padding: 1.5rem;
            box-shadow: var(--shadow-light);
            margin-bottom: 1.5rem;
            border: 1px solid var(--card-border-color);
        }
        .alert {
            padding: 1rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .alert i {
            font-size: 1.2rem;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        /* Public Content Wrapper (untuk halaman non-login) */
        .public-content-wrapper {
            flex-grow: 1;
            background-color: var(--main-bg);
            display: flex;
            flex-direction: column;
            justify-content: center; /* Pusatkan konten public secara vertikal */
            align-items: center; /* Pusatkan konten public secara horizontal */
            padding: 2rem;
        }

        /* Responsive Adjustments */
        @media (min-width: 1024px) {
            .sidebar {
                transform: translateX(0); /* Sidebar default terbuka di desktop */
                box-shadow: var(--shadow-medium);
            }
            .content-area.shifted { /* Reset untuk desktop, karena sidebar selalu terbuka */
                margin-left: 260px;
            }
            #sidebar-close {
                display: none; /* Sembunyikan tombol tutup di desktop */
            }
        }

        @media (max-width: 1023px) {
            .content-area.shifted {
                margin-left: 0; /* Pastikan tidak ada margin saat sidebar terbuka di mobile */
            }
            .sidebar.open {
                position: fixed; /* Pastikan sidebar menutupi konten di mobile */
                height: 100%;
                overflow-y: auto; /* Jika konten sidebar lebih dari tinggi layar */
            }
            .user-profile span {
                display: none; /* Sembunyikan nama user di mobile, hanya tampilkan ikon/avatar jika ada */
            }
            .user-profile img {
                margin-right: 0;
            }
            .top-bar-right {
                gap: 15px; /* Kurangi jarak antar elemen di top bar */
            }
            .main-content {
                padding: 1rem; /* Kurangi padding di mobile */
            }
        }
        
        /* Overlay untuk menutup sidebar di mobile */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            display: none;
        }
        .overlay.show {
            display: block;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <aside class="sidebar" id="sidebar">
            <i class="fas fa-times" id="sidebar-close"></i>
            <div class="sidebar-header">
                <a href="/">
                    <img src="https://web.cinema-universe.xyz/assets/images/profiles/user_2_6901a4e18aae3_IMG_20251029_115453.png" alt="Logo">
                    <span>DigitalHostID</span>
                </a>
            </div>
            <ul class="sidebar-nav">
                <li><a href="/dashboard" class="<%= currentPath === '/dashboard' ? 'active' : '' %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="/dashboard/buy-domain" class="<%= currentPath === '/dashboard/buy-domain' ? 'active' : '' %>"><i class="fas fa-plus-circle"></i> Beli Domain</a></li>
                <li><a href="/dashboard/transfer-domain" class="<%= currentPath === '/dashboard/transfer-domain' ? 'active' : '' %>"><i class="fas fa-exchange-alt"></i> Transfer Domain</a></li>
                <li><a href="/dashboard/settings" class="<%= currentPath === '/dashboard/settings' ? 'active' : '' %>"><i class="fas fa-user-cog"></i> Pengaturan</a></li>
                <% if (user.role === 'admin') { %>
                    <li><a href="/admin" class="<%= currentPath === '/admin' ? 'active' : '' %>"><i class="fas fa-shield-alt"></i> Panel Admin</a></li>
                <% } %>
            </ul>
            <div class="sidebar-footer">
                <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </div>
        </aside>

        <div class="content-area" id="content-area">
            <header class="top-bar">
                <i class="fas fa-bars" id="sidebar-toggle"></i>
                <div class="top-bar-right">
                    <span class="user-profile">
                        <img src="<%= user.avatar || 'https://via.placeholder.com/35/6c63ff/ffffff?text=U' %>" alt="User Avatar">
                        <span>Halo, <%= user.name %></span>
                    </span>
                    <div class="notification-wrapper" id="notification-wrapper">
                        <div class="notification-bell">
                            <i class="fas fa-bell"></i>
                            <% if (notifications && notifications.length > 0) { %><div class="notification-dot"></div><% } %>
                        </div>
                        <div class="notification-dropdown" id="notification-dropdown">
                            <div class="notif-header">Notifikasi</div>
                            <% if (notifications && notifications.length > 0) { %>
                                <% notifications.forEach(notif => { %>
                                <a href="<%= notif.link || '#' %>" class="notif-item">
                                    <h4><%= notif.title %></h4>
                                    <p><%= notif.message %></p>
                                </a>
                                <% }) %>
                            <% } else { %>
                                <div class="no-notifications"><p>Tidak ada notifikasi baru.</p></div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </header>
            
            <div style="padding: 0 2rem;">
                <% if (success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success" style="margin-top: 1rem;"><i class="fas fa-check-circle"></i> <%= success_msg[0] %></div>
                <% } %>
                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-error" style="margin-top: 1rem;"><i class="fas fa-exclamation-circle"></i> <%= error_msg[0] %></div>
                <% } %>
            </div>

            <main class="main-content">
    
    <% } else { %>
    
    <%# --- TAMPILAN JIKA PENGGUNA BELUM LOGIN (UNTUK /login, /register) --- %>
    <%# Tidak ada sidebar, tidak ada top-bar. Hanya memulai konten. %>
    <div class="public-content-wrapper">
        <main>
    
    <% } %>
