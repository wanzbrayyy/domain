    <!-- Konten halaman Anda akan ditempatkan di sini -->
    <!-- Contoh: <div class="card"><h1>Selamat Datang di Dashboard!</h1><p>Ini adalah konten utama Anda.</p></div> -->

            </main>
        <% if (typeof user !== 'undefined' && user) { %>
        </div><!-- Tutup content-area -->
        <div class="overlay" id="overlay"></div> <!-- Overlay untuk mobile -->
    </div><!-- Tutup wrapper -->
    <% } else { %>
    </div><!-- Tutup public-content-wrapper -->
    <% } %>
