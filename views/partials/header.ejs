<body>
    <header class="top-bar">
        <a href="/" class="top-bar-brand">
             <img src="https://files.catbox.moe/sepzlr.png" alt="Logo">
             <span>DigitalHostID</span>
        </a>
        <div class="top-bar-right">
            <% if (user) { %>
                <div id="profile-avatar-container">
                    <img src="<%= user.profilePicture %>" data-name="<%= user.name %>" class="user-profile-avatar default-avatar-img" alt="Avatar">
                </div>
                <div class="profile-dropdown" id="profile-dropdown">
                    <a href="/dashboard/settings" class="profile-dropdown-item"><i class="fas fa-user-cog"></i> Pengaturan</a>
                    <a href="/ssl" class="profile-dropdown-item"><i class="fas fa-shield-alt"></i> Beli SSL</a>
                    <hr style="margin: 0; border-color: #eee;">
                    <a href="/logout" class="profile-dropdown-item"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            <% } else { %>
                <div class="desktop-nav" style="display: flex; gap: 1rem;">
                    <a href="/login" class="btn btn-primary btn-sm">Login</a>
                    <a href="/register" class="btn btn-secondary btn-sm">Daftar</a>
                </div>
                <i class="fas fa-bars" id="public-nav-toggle"></i>
            <% } %>
        </div>
    </header>

    <% if (!user) { %>
        <nav class="public-nav-menu" id="public-nav-menu">
            <a href="/login">Login</a>
            <a href="/register">Daftar</a>
        </nav>
    <% } %>

    <div class="main-content">
        <div class="container">
            <% if (locals.success_msg && success_msg.length > 0) { %><div class="alert alert-success"><%= success_msg[0] %></div><% } %>
            <% if (locals.error_msg && error_msg.length > 0) { %><div class="alert alert-danger"><%= error_msg[0] %></div><% } %>
        </div>